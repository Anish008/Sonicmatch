# ==============================================
# SonicMatch Backend Environment Variables
# ==============================================

# Application
APP_NAME=SonicMatch
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://sonicmatch:password@localhost:5432/sonicmatch

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-api-key-here
OPENAI_API_KEY=sk-openai-key-here
LLM_MODEL=claude-opus-4-5
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_RECOMMEND=10
RATE_LIMIT_EXPLAIN=20
RATE_LIMIT_HEADPHONES=100

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TIMEOUT=60

# Security
BCRYPT_ROUNDS=12
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Caching
CACHE_TTL_SESSION=3600
CACHE_TTL_HEADPHONES=600
CACHE_TTL_FILTERS=300

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO
